{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kartverket.no/ros/1.0/no/schema.json",
  "title": "ROS",
  "description": "Skjema for risiko- og sårbarhetsanalyser",
  "type": "object",
  "properties": {
    "skjemaVersjon": {
      "description": "Versjon av skjema",
      "type": "string",
      "default": "'1.0'"
    },
    "tittel": {
      "description": "Tittel på analysen",
      "type": "string",
      "default": "''"
    },
    "omfang": {
      "description": "Omfang av analysen",
      "type": "string"
    },
    "verdivurderinger": {
      "type": "array",
      "items": {
        "type": "object",
        "propertyNames": {
          "minLength": 3
        },
        "properties": {
          "beskrivelse": {
            "type": "string"
          },
          "konfidensialitet": {
            "type": "string",
            "enum": [
              "Åpen",
              "Intern",
              "Fortrolig",
              "Strengt fortrolig"
            ]
          },
          "integritet": {
            "type": "string",
            "enum": [
              "Ingen betydning",
              "Forventet",
              "Avhengig",
              "Kritisk"
            ]
          },
          "tilgjengelighet": {
            "type": "string",
            "enum": [
              "Ingen betydning",
              "2 dager",
              "4 timer",
              "Umiddelbar"
            ]
          }
        },
        "required": [
          "beskrivelse",
          "konfidensialitet",
          "integritet",
          "tilgjengelighet"
        ],
        "additionalProperties": false
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "scenarier": {
      "type": "array",
      "items": {
        "type": "object",
        "propertyNames": {
          "minLength": 3
        },
        "properties": {
          "ID": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9]{3}$"
          },
          "tittel": {
            "type": "string"
          },
          "beskrivelse": {
            "type": "string"
          },
          "url": {
            "$ref": "#/$defs/url"
          },
          "sistEndret": {
            "type": "string",
            "format": "date"
          },
          "trusselaktører": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Datasnok",
                "Hacktivist",
                "Uheldig ansatt",
                "Innside-aktør",
                "Organiserte kriminelle",
                "Terroristorganisasjon",
                "Nasjon/stat"
              ]
            }
          },
          "sårbarheter": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Kompromittert adminbruker",
                "Sårbarhet i avhengighet",
                "Lekket hemmelighet",
                "Feilkonfigurering",
                "Klussing med input",
                "Benekte brukerhandling",
                "Informasjonslekkasje",
                "Tjenestenekt",
                "Rettighetseskalering"
              ]
            }
          },
          "risiko": {
            "$ref": "#/$defs/risiko"
          },
          "tiltak": {
            "type": "array",
            "items": {
              "type": "object",
              "propertyNames": {
                "minLength": 2
              },
              "properties": {
                "ID": {
                  "type": "string",
                  "pattern": "^[a-zA-Z0-9]{3}$"
                },
                "tittel": {
                  "type": "string"
                },
                "beskrivelse": {
                  "type": "string"
                },
                "tiltakseier": {
                  "type": "string"
                },
                "frist": {
                  "type": "string",
                  "format": "date"
                },
                "status": {
                  "type": "string",
                  "enum": [
                    "Ikke startet",
                    "Startet",
                    "På vent",
                    "Fullført",
                    "Avbrutt"
                  ]
                }
              },
              "required": [
                "beskrivelse",
                "tiltakseier",
                "frist",
                "status"
              ],
              "additionalProperties": false
            }
          },
          "restrisiko": {
            "$ref": "#/$defs/risiko"
          }
        },
        "required": [
          "tittel",
          "beskrivelse",
          "sistEndret",
          "trusselaktører",
          "sårbarheter",
          "risiko",
          "tiltak",
          "restrisiko"
        ],
        "additionalProperties": false
      }
    },
    "sops": {
      "type": "object"
    }
  },
  "required": [
    "skjemaVersjon",
    "tittel",
    "omfang",
    "scenarier"
  ],
  "additionalProperties": false,
  "$defs": {
    "risiko": {
      "type": "object",
      "properties": {
        "oppsummering": {
          "type": "string"
        },
        "sannsynlighet": {
          "description": "Antall hendelser/dag",
          "type": "number",
          "enum": [
            0.01,
            0.1,
            1,
            50,
            300
          ]
        },
        "konsekvens": {
          "description": "Beløp i kroner/hendelse",
          "type": "number",
          "enum": [
            1000,
            30000,
            1000000,
            30000000,
            1000000000
          ]
        }
      },
      "required": [
        "sannsynlighet",
        "konsekvens"
      ],
      "additionalProperties": false
    },
    "url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://"
    }
  }
}
